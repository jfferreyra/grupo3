              minlength="3" maxlength="20">
            </p>
            <p class="cardmax__prop">
              <label for="color" class="cardmax__key">Color:</label> <input type="text" value="<%=auto.color%>" class="cardmax__value" id="color" name="color" required
              minlength="3" maxlength="20">
            </p>
            <p class="cardmax__prop">
              <label for="puertas" class="cardmax__key">Puertas:</label> <input type="text" value="<%=auto.puertas%>" class="cardmax__value" id="puertas" name="puertas" required
              minlength="3" maxlength="20">
            </p>
            <p class="cardmax__prop">
              <label for="airbags" class="cardmax__key">Airbags:</label> <input type="text" value="<%=auto.airbags%>" class="cardmax__value" id="airbags" name="airbags" required
              minlength="3" maxlength="20">
            </p>
            <p class="cardmax__prop">
              <label for="precio" class="cardmax__key">Precio:</label> <input type="text" value="<%=auto.precio%>" class="cardmax__value" id="precio" name="precio" required
              minlength="3" maxlength="20">
            </p>
            <p class="cardmax__prop">
              <label for="moneda" class="cardmax__key">Moneda:</label> <input type="text" value="<%=auto.moneda%>" class="cardmax__value" id="moneda" name="moneda" required
              minlength="3" maxlength="20">
            </p>
        </div>
      </div>
      <div class="cardmax__actualizar">
        <button type="submit" class="btnNar"><%if(auto.id!==0){%>actualizar<%}else{%>crear<%}%></button>
        <a href="/adminProducts/addProduct/<%=auto.id%> " class="btnNar btnNar--claro">resetear</a>
      </div>
    </div>
  </div>
</form>
<script>
  var loadImg = function(event) {
    for(let i=1;i<8;i++){
    var image = document.getElementById('cardmax__img-'+i);
    image.src = URL.createObjectURL(event.target.files[i-1]);
   }
  };
  var loadImgSec = function(event,numphoto) {
    var imageSec = document.getElementById('cardmax__img-'+numphoto);
    imageSec.src = URL.createObjectURL(event.target.files[0]);
  };

  var borrar = function(img) {
    var imageSec = document.getElementById('cardmax__img-'+img);
    imageSec.src = "";
  };
</script>