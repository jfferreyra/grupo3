<article class="cardwide">
  <div class="cardwide__photo">
    <img src="/users/images/<%=product.image%>" alt="" srcset="">
  </div>
  <div class="cardwide__data">
    <div class="cardwide__top">
      <p class="cardwide__marca"><span><%=product.name%></span><span><%=product.surname%></span></p>
      <p class="cardwide__precio"><%=product.email%></p>
    </div>
    <div class="cardwide__spec">
      <div class="cardwide__tec">
        <p class="cardwide__prop">DNI: <span class="cardwide__value"><%=Intl.NumberFormat('de-DE').format(product.dni)%></span></p>
        <p class="cardwide__prop">Cumpleaños: <span class="cardwide__value"><%=product.birth%></span></p>
        <div class="userCard__address">Domicilio: 
          <p><%=product.address%></p>
        </div>
      </div>
      <div class="cardwide__tec">
        <p class="cardwide__prop">Teléfono: <span class="cardwide__value"><%=product.phone%></span></p>
        <p class="cardwide__prop">Provincia: <span class="cardwide__value"><%=product.state%></span></p>
        <p class="cardwide__prop">Localidad: <span class="cardwide__value"><%=product.location%></span></p>
        <p class="cardwide__prop">Tipo: <span class="cardwide__value"><%=product.type%></span></p>
      </div>
      </div>
      <div class="cardwide__btns">
      <% if (op==1) { %>
        <a href="/products/edit/<%=product.id%>" class="cardwide__btn cardwide__btn-editar cardwide__btn--claro">Editar</a>
        <form action="/user/delete/<%=product.id%>?_method=DELETE" method="POST">
          <button type="submit" class="cardwide__btn">Eliminar</button>
        </form>
        <% }else{%>
        <form action="/carrito/1" >
        <!-- <form action="/carrito/del/<%=product.id%>?_method=DELETE" method="POST"> -->
          <button type="submit" class="cardwide__btn">Eliminar</button>
        </form>
      <%};%>

    </div>
  </div>
</article>